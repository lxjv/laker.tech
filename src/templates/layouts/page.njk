---
layout: base.njk
---

<div style="margin-bottom: 0.75em">
	<h2 class="page-title">
        {{title | safe}}
		{% if nodate == false %}
			<small>
            	Last updated {{page.date | datePretty}}
        	</small>	
		{% endif %}
    </h2>

	{% if uplink != null %}
    	<a href="{{uplink}}"><- back</a>
	{% endif %}

    {% if subtitle != null %}
	    <blockquote>
		    {{subtitle | safe}}
		</blockquote>
    {% endif %}
</div>

<article style="margin-top: 0.75em">
	{{content | safe}}
</article>